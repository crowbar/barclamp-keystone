{
  "id": "bc-template-keystone",
  "description": "Centralized authentication and authorization service for OpenStack",
  "attributes": {
    "keystone": {
      "debug": false,
      "frontend": "apache",
      "verbose": false,
      "gitrepo": "http://github.com/openstack/keystone.git",
      "git_instance": "",
      "git_refspec": "stable/havana",
      "use_gitbarclamp": true,
      "use_pip_cache": true,
      "use_gitrepo": false,
      "use_virtualenv": true,
      "pfs_deps": [
          "pip://setuptools-git",
          "pip://distribute>=0.6.28",
          "pip://MySQL-python"
      ],
      "use_syslog": false,
      "database_instance": "none",
      "db": {
        "database": "keystone",
        "user": "keystone"
      },
      "sql": {
        "idle_timeout": 30
      },
      "ssl": {
        "certfile": "/etc/keystone/ssl/certs/signing_cert.pem",
        "keyfile": "/etc/keystone/ssl/private/signing_key.pem",
        "generate_certs": false,
        "insecure": false,
        "cert_required": false,
        "ca_certs": "/etc/keystone/ssl/certs/ca.pem"
      },
      "api": {
        "protocol": "http",
        "service_port": 5000,
        "api_port": 5000,
        "api_host": "0.0.0.0",
        "admin_port": 35357,
        "admin_host": "0.0.0.0"
      },
      "admin": {
        "tenant": "admin",
        "username": "admin",
        "password": "crowbar"
      },
      "service": {
        "tenant": "service",
        "token": "999888777666"
      },
      "default": {
        "tenant": "openstack",
        "username": "crowbar",
        "password": "crowbar"
      },
      "identity": {
        "driver": "keystone.identity.backends.sql.Identity"
      },
      "signing": {
        "token_format": "PKI",
        "certfile": "/etc/keystone/ssl/certs/signing_cert.pem",
        "keyfile": "/etc/keystone/ssl/private/signing_key.pem",
        "ca_certs": "/etc/keystone/ssl/certs/ca.pem"
      },
      "ldap" : {
        "url": "ldap://localhost",
        "user": "dc=Manager,dc=example,dc=com",
        "password": "",
        "suffix": "cn=example,cn=com",
        "use_dumb_member": false,
        "allow_subtree_delete": false,
        "dumb_member": "cn=dumb,dc=example,dc=com",
        "page_size": 0,
        "alias_dereferencing": "default",
        "query_scope": "one"
      }
    }
  },
  "deployment": {
    "keystone": {
      "crowbar-revision": 0,
      "element_states": {
        "keystone-server": [ "readying", "ready", "applying" ]
      },
      "elements": {},
      "element_order": [
         ["keystone-server" ]
      ],
      "config": {
        "environment": "keystone-config-base",
        "mode": "full",
        "transitions": false,
        "transition_list": []
      }
    }
  }
}
