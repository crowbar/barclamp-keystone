{
  "id": "bc-template-keystone",
  "description": "Centralized authentication and authorization service for OpenStack",
  "attributes": {
    "keystone": {
      "debug": false,
      "frontend": "apache",
      "verbose": false,
      "gitrepo": "http://github.com/openstack/keystone.git",
      "git_instance": "",
      "git_refspec": "stable/grizzly",
      "use_gitbarclamp": false,
      "use_pip_cache": false,
      "use_gitrepo": false,
      "use_virtualenv": false,
      "pfs_deps": [
        "python-eventlet",
        "python-greenlet",
        "python-pastedeploy",
        "python-paste",
        "python-routes",
        "python-sqlalchemy",
        "python-migrate",
        "python-passlib",
        "python-lxml",
        "python-pam",
        "python-iso8601",
        "python-webob",
        "python-virtualenv",
        "pip://python-keystoneclient>=0.2,<0.3"
      ],
      "use_syslog": false,
      "database_instance": "none",
      "db": {
        "database": "keystone",
        "user": "keystone"
      },
      "sql": {
        "idle_timeout": 30
      },
      "ssl": {
        "insecure": false,
        "certfile": "/etc/keystone/ssl/certs/signing_cert.pem",
        "keyfile": "/etc/keystone/ssl/private/signing_key.pem",
        "cert_required": false,
        "ca_certs": "/etc/keystone/ssl/certs/ca.pem"
      },
      "api": {
        "protocol": "http",
        "service_port": 5000,
        "api_port": 5000,
        "api_host": "0.0.0.0",
        "admin_port": 35357,
        "admin_host": "0.0.0.0"
      },
      "admin": {
        "tenant": "admin",
        "username": "admin",
        "password": "crowbar"
      },
      "service": {
        "tenant": "service",
        "token": "999888777666"
      },
      "default": {
        "tenant": "openstack",
        "username": "crowbar",
        "password": "crowbar"
      },
      "signing": {
        "token_format": "PKI",
        "certfile": "/etc/keystone/ssl/certs/signing_cert.pem",
        "keyfile": "/etc/keystone/ssl/private/signing_key.pem",
        "ca_certs": "/etc/keystone/ssl/certs/ca.pem"
      }
    }
  },
  "deployment": {
    "keystone": {
      "crowbar-revision": 0,
      "element_states": {
        "keystone-server": [ "readying", "ready", "applying" ]
      },
      "elements": {},
      "element_order": [
         ["keystone-server" ]
      ],
      "config": {
        "environment": "keystone-config-base",
        "mode": "full",
        "transitions": false,
        "transition_list": []
      }
    }
  }
}
