
{
  "id": "bc-template-keystone",
  "description": "Centralized authentication and authorization service for OpenStack",
  "attributes": {
    "keystone": {
      "debug": true,
      "verbose": true,
      "use_syslog": false,
      "sql_engine": "mysql",
      "mysql_instance": "none",
      "db": {
        "database": "keystone",
        "user": "keystone"
      },
      "sql": {
        "idle_timeout": 30,
        "min_pool_size": 5,
        "max_pool_size": 10,
        "pool_timeout": 200
      },
      "api": {
        "service_port": 5000,
        "service_host": "0.0.0.0",
        "api_port": 5000,
        "api_host": "0.0.0.0",
        "auth_port": 35357,
        "auth_host": "0.0.0.0"
      },
      "admin": {
        "tenant": "admin",
        "username": "admin",
        "password": "crowbar"
      },
      "service": {
        "tenant": "service",
        "token": "999888777666"
      },
      "default": {
        "tenant": "openstack",
        "username": "crowbar",
        "password": "crowbar"
      }
    }
  },
  "deployment": {
    "keystone": {
      "crowbar-revision": 0,
      "element_states": {
        "keystone-server": [ "readying", "ready", "applying" ]
      },
      "elements": {},
      "element_order": [
         ["keystone-server" ]       		           		     
      ],
      "config": {
        "environment": "keystone-config-base",
        "mode": "full",
        "transitions": false,
        "transition_list": []
      }
    }
  }
}

